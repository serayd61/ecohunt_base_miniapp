{
  "name": "ecohunt-production",
  "version": "1.0.0",
  "description": "EcoHunt - Environmental challenge platform on Base network",
  "private": true,
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "echo 'No backend build step'",
    "build": "npm run build:frontend",
    "deploy:contracts": "cd deployment && npx hardhat run scripts/deploy.js --network base",
    "test": "npm run test:contracts",
    "test:contracts": "cd deployment && npx hardhat test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/serayd61/ecohunt_base_miniapp.git"
  },
  "keywords": [
    "blockchain",
    "base",
    "environmental",
    "web3",
    "nextjs",
    "ai"
  ],
  "author": "serayd61",
  "license": "MIT"
}
