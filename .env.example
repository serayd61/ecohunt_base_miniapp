# Blockchain Configuration
PRIVATE_KEY=your_private_key_here
BASE_RPC_URL=https://mainnet.base.org
BASESCAN_API_KEY=your_basescan_api_key

# Deployed Contract Address (will be set after deployment)
GREEN_TOKEN_CONTRACT_ADDRESS=

# AI Services
GOOGLE_CLOUD_KEY_PATH=/path/to/google-cloud-key.json
OPENAI_API_KEY=your_openai_api_key

# IPFS Storage
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# Backend Configuration
NODE_ENV=production
PORT=3001
BACKEND_URL=https://your-backend-domain.com

# Admin Configuration
ADMIN_KEY=your_secure_admin_key_for_manual_verification

# Frontend Configuration (Next.js)
NEXT_PUBLIC_GREEN_TOKEN_ADDRESS=
